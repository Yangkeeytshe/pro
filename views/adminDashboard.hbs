<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      display: flex;
      min-height: 100vh;
      background: linear-gradient(135deg, #e0f7fa, #f3f4f6);
      color: #111827;
    }

    aside {
      width: 260px;
      background-color: #ffffff;
      box-shadow: 2px 0 12px rgba(0, 0, 0, 0.06);
      padding: 3rem 2rem;
      display: flex;
      flex-direction: column;
      margin-top: 60px;
      transition: transform 0.3s ease;
    }

    aside h2 {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 2.5rem;
    }

    aside ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    aside ul li {
      margin-bottom: 1.25rem;
    }

    aside ul li a {
      text-decoration: none;
      font-size: 16px;
      font-weight: 500;
      color: #374151;
      transition: all 0.2s ease;
      display: block;
      padding: 0.5rem 0;
    }

    aside ul li a:hover {
      color: #2563eb;
      transform: translateX(4px);
    }

    aside ul li:last-child a {
      color: #dc2626;
    }

    main {
      flex: 1;
      padding: 3.5rem 4rem;
      max-width: 1200px;
      margin: auto;
      display: flex;
      flex-direction: column;
      position: relative;
    }

    h1 {
      font-size: 32px;
      font-weight: 700;
      margin-bottom: 2rem;
    }

    #clock {
      position: absolute;
      top: 2rem;
      right: 4rem;
      font-size: 15px;
      color: #6b7280;
      background: #ffffffcc;
      padding: 10px 16px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      backdrop-filter: blur(8px);
    }

    .section-bg {
      background: rgba(255, 255, 255, 0.7);
      border-radius: 20px;
      padding: 3rem;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
      backdrop-filter: blur(12px);
      transition: all 0.3s ease-in-out;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
    }

    .dashboard-card {
      background-color: #ffffff;
      border-radius: 14px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
      padding: 2rem;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .dashboard-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
    }

    .dashboard-card h2 {
      font-size: 18px;
      font-weight: 600;
      color: #374151;
      margin: 0 0 0.75rem 0;
    }

    .dashboard-card p {
      font-size: 28px;
      font-weight: 700;
      margin: 0;
      color: #2563eb;
    }

    /* Mobile menu toggle button */
    .mobile-menu-toggle {
      display: none;
      position: fixed;
      top: 1rem;
      left: 1rem;
      z-index: 1001;
      background: #ffffff;
      border: none;
      border-radius: 8px;
      padding: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      cursor: pointer;
      font-size: 18px;
    }

    .mobile-menu-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 999;
    }

    /* Tablet styles */
    @media (max-width: 1024px) {
      aside {
        width: 220px;
        padding: 2rem 1.5rem;
      }

      main {
        padding: 3rem 2rem;
      }

      #clock {
        right: 2rem;
      }

      .section-bg {
        padding: 2rem;
      }

      .grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
      }

      .dashboard-card {
        padding: 1.5rem;
      }
    }

    /* Mobile styles */
    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }

      .mobile-menu-toggle {
        display: block;
      }

      aside {
        position: fixed;
        top: 0;
        left: 0;
        width: 280px;
        height: 100vh;
        margin-top: 0;
        padding: 4rem 2rem 2rem;
        z-index: 1000;
        transform: translateX(-100%);
        overflow-y: auto;
      }

      aside.mobile-open {
        transform: translateX(0);
      }

      .mobile-menu-overlay.active {
        display: block;
      }

      main {
        width: 100%;
        padding: 5rem 1.5rem 2rem;
        margin: 0;
      }

      h1 {
        font-size: 28px;
        margin-bottom: 1.5rem;
      }

      #clock {
        position: static;
        margin-bottom: 1.5rem;
        align-self: flex-end;
        font-size: 14px;
      }

      .section-bg {
        padding: 1.5rem;
        border-radius: 16px;
      }

      .grid {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .dashboard-card {
        padding: 1.5rem;
      }

      .dashboard-card h2 {
        font-size: 16px;
      }

      .dashboard-card p {
        font-size: 24px;
      }
    }

    /* Small mobile styles */
    @media (max-width: 480px) {
      aside {
        width: 100%;
      }

      main {
        padding: 5rem 1rem 2rem;
      }

      h1 {
        font-size: 24px;
      }

      .section-bg {
        padding: 1rem;
        border-radius: 12px;
      }

      .dashboard-card {
        padding: 1rem;
      }

      .dashboard-card h2 {
        font-size: 15px;
      }

      .dashboard-card p {
        font-size: 20px;
      }
    }

    /* Landscape mobile styles */
    @media (max-width: 768px) and (orientation: landscape) {
      main {
        padding: 3rem 1.5rem 2rem;
      }

      .grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      }
    }
  </style>
</head>

<body>
  <button class="mobile-menu-toggle" onclick="toggleMobileMenu()">â˜°</button>
  <div class="mobile-menu-overlay" onclick="closeMobileMenu()"></div>

  <aside id="sidebar">
    <h2>Admin Panel</h2>
    <ul>
      <li><a href="/admin/adminDashboard" onclick="closeMobileMenu()">Dashboard</a></li>
      <li><a href="/admin/adminManageUser" onclick="closeMobileMenu()">Manage Users</a></li>
      <li><a href="/admin/adminManageProduct" onclick="closeMobileMenu()">Products</a></li>  
      <li><a href="/admin/adminAnalytics" onclick="closeMobileMenu()">Analytics</a></li>  
      <li><a href="/admin/adminSalesAnalytics" onclick="closeMobileMenu()">Sales Analytics</a></li>  
      <li><a href="/logout" onclick="closeMobileMenu()">Logout</a></li>
    </ul>
  </aside>

  <main>
    <div id="clock">Loading time...</div>
    <h1>Welcome, Admin!</h1>
    <div class="section-bg">
      <div class="grid">
        <div class="dashboard-card">
          <h2>Total Users</h2>
          <p>1,234</p>
        </div>
        <div class="dashboard-card">
          <h2>Products</h2>
          <p>567</p>
        </div>
        <div class="dashboard-card">
          <h2>Newsletter Subscribers</h2>
          <p>890</p>
        </div>
      </div>
    </div>
  </main>

  <script>
    function updateClock() {
      const now = new Date();
      const timeString = now.toLocaleTimeString('en-US', {
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: true
      });
      document.getElementById('clock').textContent = `ðŸ•’ ${timeString}`;
    }

    function toggleMobileMenu() {
      const sidebar = document.getElementById('sidebar');
      const overlay = document.querySelector('.mobile-menu-overlay');
      
      sidebar.classList.toggle('mobile-open');
      overlay.classList.toggle('active');
    }

    function closeMobileMenu() {
      const sidebar = document.getElementById('sidebar');
      const overlay = document.querySelector('.mobile-menu-overlay');
      
      sidebar.classList.remove('mobile-open');
      overlay.classList.remove('active');
    }

    // Close mobile menu when clicking outside
    document.addEventListener('click', function(e) {
      const sidebar = document.getElementById('sidebar');
      const toggle = document.querySelector('.mobile-menu-toggle');
      
      if (!sidebar.contains(e.target) && !toggle.contains(e.target)) {
        closeMobileMenu();
      }
    });

    setInterval(updateClock, 1000);
    updateClock(); // Initial call
  </script>
</body>
</html>