  <h1>Add New Product</h1>

  {{#if message}}
    <div class="error-message">{{message}}</div>
  {{/if}}

  <form action="/admin/adminManageProduct/products/add" method="POST">
    <input type="text" name="name" placeholder="Product Name *" required />
    <input type="text" name="category" placeholder="Category *" required />
    <input type="number" step="0.01" name="price" placeholder="Price *" required />
    <input type="date" name="date_uploaded" placeholder="Date Uploaded" />
    <input type="number" step="0.1" name="rating" min="0" max="5" placeholder="Rating (0-5)" />
    <input type="text" name="image" placeholder="Image URL" />
    <button type="submit">Add Product</button>
  </form>

  <script>
    // Apply dark mode if previously selected from admin settings
    window.addEventListener('DOMContentLoaded', () => {
      if (localStorage.getItem('darkMode') === 'true') {
        document.documentElement.classList.add('dark-mode');
      }
    });
  </script>
