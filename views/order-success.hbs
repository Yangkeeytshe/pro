{{! Order Confirmation Page }}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="stylesheet" href="/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
<title>Mom's Art</title>
</head>

{{> header}}
<style>
  .confirmation-wrapper {
    min-height: 70vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #f6f6f6;
    padding: 60px 20px 40px 20px;
  }
  .confirmation-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.07);
    padding: 40px 32px;
    max-width: 420px;
    width: 100%;
    text-align: center;
    margin-bottom: 32px;
  }
  .confirmation-icon {
    color: #27ae60;
    font-size: 48px;
    margin-bottom: 18px;
  }
  .order-id {
    font-size: 1.1rem;
    color: #555;
    margin-bottom: 18px;
    letter-spacing: 1px;
  }
  .confirmation-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 12px;
    color: #222;
  }
  .confirmation-message {
    font-size: 1.1rem;
    color: #444;
    margin-bottom: 24px;
  }
  .confirmation-actions a {
    display: inline-block;
    margin: 0 8px;
    padding: 10px 24px;
    border-radius: 6px;
    background: #27ae60;
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s;
  }
  .confirmation-actions a:hover {
    background: #219150;
  }
</style>
<div class="confirmation-wrapper">
  <div class="confirmation-card">
    <div class="confirmation-icon">
      <svg width="56" height="56" fill="none" viewBox="0 0 56 56"><circle cx="28" cy="28" r="28" fill="#eafaf1"/><path d="M18 29.5l7 7 13-13" stroke="#27ae60" stroke-width="3.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
    </div>
    <div class="confirmation-title">Thank You for Your Order!</div>
    <div class="order-id">Order ID: <b>{{orderId}}</b></div>
    <div class="confirmation-message">
      Your order has been placed successfully.<br>
    </div>
    <div class="confirmation-actions">
      <a href="/shop">Continue Shopping</a>
      <a href="/">Go to Home</a>
    </div>
  </div>
</div>
{{> footer}}
